// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:mydb.sqlite"
}

model Category {
  id          Int           @id @default(autoincrement())
  description String
  type        String // Should be Enum type EXPENSE | INVOICE but Sqlite dont support it
}

model Transaction {
  id          Int      @id @default(autoincrement())
  description String
  value       Float
  date        DateTime
}
