generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Category {
  id          String        @id @default(auto()) @map("_id") @db.ObjectId
  description String
  type        String // Should be Enum type EXPENSE | INVOICE but Sqlite dont support it
  transaction Transaction[]
}

model Transaction {
  id             String           @id @default(auto()) @map("_id") @db.ObjectId
  description    String
  value          Float
  date           DateTime
  category       Category         @relation(fields: [categoryId], references: [id])
  categoryId     String           @db.ObjectId
  subTransaction SubTransaction[]
}

type SubTransaction {
  id          String @db.ObjectId
  description String
  value       String
}
